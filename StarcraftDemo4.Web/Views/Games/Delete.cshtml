@model GameEntity
@{
    ViewData["Title"] = "Delete Game";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this game?</h3>
<div class="alert alert-warning">
    <strong>Warning:</strong> This action cannot be undone. All game steps will also be deleted.
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Game ID:</dt>
            <dd class="col-sm-9">@Model.GameId</dd>

            <dt class="col-sm-3">Start Time:</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("yyyy-MM-dd HH:mm:ss")</dd>

            <dt class="col-sm-3">Duration:</dt>
            <dd class="col-sm-9">@Model.TotalGameTime seconds</dd>

            <dt class="col-sm-3">Final Resources:</dt>
            <dd class="col-sm-9">@Model.FinalMinerals minerals, @Model.FinalGas gas</dd>

            <dt class="col-sm-3">Final Units:</dt>
            <dd class="col-sm-9">@Model.FinalUnitCount/@Model.FinalUnitCap</dd>

            <dt class="col-sm-3">Total Steps:</dt>
            <dd class="col-sm-9">@Model.GameSteps.Count</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="GameId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>